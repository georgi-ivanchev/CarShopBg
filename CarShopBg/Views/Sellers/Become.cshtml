@model BecomeSellerFormModel

@{
    ViewBag.Title = "Become Seller";
}

<h3 class="text-center">@ViewBag.Title</h3>
<div class="row">
    <div class="offset-lg-2 offset-md-1 offset-xl-3 col-xl-6 col-lg-8 col-md-10 col-sm-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter your name...">
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Enter your phone number...">
            </div>

            <input type="submit" class="btn btn-primary" value="Submit" />
        </form>
    </div>
</div>
